<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CalculationActivity">

    <TextView
            android:id="@+id/tv_title_a"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="@id/edt_value_a"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="@+id/edt_value_a"
            android:text="Nhập a: "/>
    <EditText android:layout_width="0dp"
              android:id="@+id/edt_value_a"
              android:layout_marginTop="16dp"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginEnd="12dp"
              android:fontFamily="monospace"
              android:textStyle="bold"
              android:inputType="number"
              android:textColor="@color/colorPrimaryDark"
              app:layout_constraintStart_toEndOf="@+id/tv_title_a"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tv_title_b"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="@+id/edt_value_b"
            app:layout_constraintTop_toTopOf="@+id/edt_value_b"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:text="Nhập b: "/>
    <EditText
            android:id="@+id/edt_value_b"
            android:layout_width="0dp"
            android:layout_marginTop="24dp"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:inputType="number"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintTop_toBottomOf="@id/edt_value_a"
            app:layout_constraintStart_toEndOf="@+id/tv_title_b"
            app:layout_constraintEnd_toEndOf="@id/edt_value_a"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_choose_operator"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_light"
            app:layout_constraintTop_toBottomOf="@+id/edt_value_b"
            app:layout_constraintStart_toStartOf="@id/tv_title_b"
            android:layout_marginTop="18dp"
            android:text="Chọn phép toán"/>
    <Button
            android:id="@+id/btn_sum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:layout_marginEnd="8dp"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:background="@drawable/bg_btn_operator_state"
            android:textColor="@android:color/holo_red_light"
            app:layout_constraintEnd_toStartOf="@+id/btn_minus"
            app:layout_constraintStart_toStartOf="@id/tv_choose_operator"
            app:layout_constraintTop_toBottomOf="@id/tv_choose_operator"
            android:layout_marginTop="18dp"
    />
    <Button
            android:id="@+id/btn_minus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:background="@drawable/bg_btn_operator_state"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            android:textColor="@android:color/holo_red_light"
            app:layout_constraintStart_toEndOf="@id/btn_sum"
            app:layout_constraintEnd_toStartOf="@+id/btn_multi"
            app:layout_constraintTop_toBottomOf="@id/tv_choose_operator"
            android:layout_marginTop="18dp"
    />
    <Button
            android:id="@+id/btn_multi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="*"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_btn_operator_state"
            android:textColor="@android:color/holo_red_light"
            app:layout_constraintStart_toEndOf="@+id/btn_minus"
            app:layout_constraintEnd_toStartOf="@+id/btn_dive"
            app:layout_constraintTop_toBottomOf="@id/tv_choose_operator"
            android:layout_marginTop="18dp"
    />
    <Button
            android:id="@+id/btn_dive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="/"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:background="@drawable/bg_btn_operator_state"
            android:textColor="@android:color/holo_red_light"
            app:layout_constraintStart_toEndOf="@+id/btn_multi"
            app:layout_constraintEnd_toEndOf="@id/edt_value_b"
            app:layout_constraintTop_toBottomOf="@id/tv_choose_operator"
            android:layout_marginTop="18dp"
    />
    <Button
            android:id="@+id/btn_get_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/btn_multi"
            android:text="Get Result"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="@+id/btn_dive"
            android:textColor="@color/colorPrimaryDark"
            android:textAllCaps="false"
    />

</androidx.constraintlayout.widget.ConstraintLayout>